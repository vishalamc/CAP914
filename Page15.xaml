<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNewMobileApp.Page15" Padding="50">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Enter student name " x:Name="txtStudentName"/>
            <Entry Placeholder="Enter student registration number" x:Name="txtRegNo"/>
            <Entry Placeholder="Enter CA marks" x:Name="txtCAmarks"/>
            <Entry Placeholder="Enter Attendance marks" x:Name="txtAttendancemarks" />
            <Entry Placeholder="Enter MTE marks" x:Name="txtMTEmarks"/>
            <Entry Placeholder="Enter ETE marks " x:Name="txtETEmarks"/>
            <Label Text="CGPA calc" TextColor="DodgerBlue" FontSize="Large" x:Name="lblresult"/>
            <Button Text="CALCULATE CGPA" Clicked="btnCGPA"/>
            <Label Text="RESULT" x:Name="lblresult1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>