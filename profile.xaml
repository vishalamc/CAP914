<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNewMobileApp.profile" Padding="30" BackgroundColor="Orange">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="White">                   
                </Setter>
                <Setter Property="FontSize" Value="Medium">
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Image Source="user.png" HeightRequest="120" WidthRequest="100" Aspect="AspectFit" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="User Name: "></Label>
                <Label Text="Kumar"></Label>
            
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Age: "></Label>
                <Label Text="30"></Label>

            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Contact: "></Label>
                <Label Text="988888XXXX"></Label>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>