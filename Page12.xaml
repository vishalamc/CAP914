<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNewMobileApp.Page12" Padding="70" BackgroundColor="Azure">
    <ContentPage.Content>
        <StackLayout>
            
<Label Text=" CGPA Calc" FontSize="Large" TextColor="Red" />
<Entry Placeholder="Enter Student Name" x:Name="txtStudentName" />
<Entry Placeholder="Enter Registration Number" x:Name="txtRegNo" />
<Entry Placeholder="Enter CA Obtained Marks" x:Name="txtCAMarks" />
<Entry Placeholder="Enter MTE Obtained Marks" x:Name="txtMTEMarks" />
<Entry Placeholder="Enter ETE Obtained Marks" x:Name="txtETEMarks" />
<Entry Placeholder="Enter Attendance Marks" x:Name="txtAttMarks" />
            
<Button Text="CALCULATE CGPA" Clicked="btnCGPA" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>